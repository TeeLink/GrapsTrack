@model IEnumerable<GrapsTrack.Models.PerformerVm>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@foreach (var item in Model.OrderBy(x => x.FirstName))
{
    <div class="row col-lg-4 col-md-6">
        <div class="event">
            <h2>
                @Html.ActionLink(item.FirstName + " " + item.LastName, "Details", new { id = item.Id })
            </h2>
        </div>
    </div>
}

